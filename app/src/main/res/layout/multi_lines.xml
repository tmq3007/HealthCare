<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#90000000"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Doctor Name and Specialty Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_baseline_person_24"
                android:padding="8dp"
                android:background="@drawable/input_bg"
                app:tint="@color/purple_200" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/line_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dr. John Smith"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/line_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Cardiology"
                    android:textColor="@color/yellowLight"
                    android:textSize="14sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <!-- Fee Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_bg"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fee"
                    android:textColor="#80FFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/line_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500K"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#40FFFFFF"
            android:layout_marginVertical="8dp" />

        <!-- Hospital Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_dialog_map"
                app:tint="@color/purple_200" />

            <TextView
                android:id="@+id/line_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="123 Medical Center, Hanoi"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Bottom Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Experience -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="@color/yellowLight" />

                <TextView
                    android:id="@+id/line_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="5 yrs"
                    android:textColor="@color/yellowLight"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/stat_notify_call_mute"
                    app:tint="@color/yellowLight" />

                <TextView
                    android:id="@+id/line_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="+84 123456789"
                    android:textColor="@color/yellowLight"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Book Button -->
            <Button
                android:id="@+id/line_e"
                android:layout_width="63dp"
                android:layout_height="36dp"
                android:layout_weight="0.2"
                android:background="@drawable/btn_bg"
                android:text="Book"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>